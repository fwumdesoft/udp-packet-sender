<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fwumdesoft.udppacketsender">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CreateTaskActivity"
            android:label="@string/title_activity_create_task"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:parentActivityName=".ListTasksActivity"></activity>
        <activity
            android:name=".ListTasksActivity"
            android:label="@string/title_activity_list_tasks"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".UDPTask"></service>
    </application>

</manifest>